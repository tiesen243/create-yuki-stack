{
  "extends": "@yuki/tsconfig/base.json",
  "compilerOptions": {
    "lib": ["ES2022", "dom"],
    "jsx": "react-native",
    "moduleSuffixes": [".ios", ".android", ".native", ""],
    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "exclude": ["node_modules"]
}
