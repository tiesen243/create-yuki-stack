{
  "name": "create-yuki-stack",
  "private": true,
  "description": "Clean and typesafe starter monorepo using Turborepo along with React and tRPC ",
  "license": "MIT",
  "workspaces": [
    "cli",
    "tools/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "bump-deps": "bunx --bun npm-check-updates --deep -u && bun install",
    "changeset": "changeset",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "dev": "turbo dev --continue",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "postinstall": "bun lint:ws",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:ws": "bunx --bun sherif@latest",
    "typecheck": "turbo run typecheck"
  },
  "prettier": "@yuki/prettier-config",
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@ianvs/prettier-plugin-sort-imports": "catalog:",
    "turbo": "^2.6.3"
  },
  "packageManager": "bun@1.3.0",
  "catalog": {
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@tanstack/react-query": "^5.90.12",
    "@types/node": "^25.0.2",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript": "^5.9.3",
    "zod": "^4.2.0"
  },
  "catalogs": {
    "react": {
      "@types/react": "^19.2.7",
      "@types/react-dom": "^19.2.3",
      "react": "^19.2.3",
      "react-dom": "^19.2.3"
    },
    "tailwind": {
      "@tailwindcss/postcss": "^4.1.18",
      "@tailwindcss/vite": "^4.1.18",
      "tailwindcss": "^4.1.18"
    },
    "trpc": {
      "@trpc/server": "^11.8.0",
      "@trpc/client": "^11.8.0",
      "@trpc/tanstack-react-query": "^11.8.0",
      "superjson": "^2.2.6"
    },
    "orpc": {
      "@orpc/server": "^1.12.3",
      "@orpc/client": "^1.12.3",
      "@orpc/react-query": "^1.12.3"
    }
  }
}
