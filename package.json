{
  "name": "create-yuki-stack",
  "private": true,
  "description": "Clean and typesafe starter monorepo using Turborepo along with React and tRPC ",
  "license": "MIT",
  "workspaces": [
    "cli",
    "tools/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "bump-deps": "bunx --bun npm-check-updates --deep -u && bun install",
    "changeset": "changeset",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "dev": "turbo dev --continue",
    "format": "oxfmt --check",
    "format:fix": "oxfmt --write",
    "lint": "oxlint cli/src",
    "lint:fix": "oxlint cli/src --fix",
    "lint:ws": "bunx --bun sherif@latest",
    "postinstall": "bun lint:ws",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.39.0",
    "turbo": "^2.7.5"
  },
  "packageManager": "bun@1.3.0",
  "catalogs": {
    "prod": {
      "@tanstack/react-query": "^5.90.12",
      "zod": "^4.2.1"
    },
    "dev": {
      "@types/node": "^25.0.9",
      "dotenv-cli": "^11.0.0",
      "tsdown": "^0.19.0",
      "typescript": "^5.9.3"
    },
    "react": {
      "@types/react": "^19.2.7",
      "@types/react-dom": "^19.2.3",
      "react": "^19.2.3",
      "react-dom": "^19.2.3"
    },
    "tailwind": {
      "@tailwindcss/postcss": "^4.1.18",
      "@tailwindcss/vite": "^4.1.18",
      "tailwindcss": "^4.1.18"
    },
    "trpc": {
      "@trpc/server": "^11.8.1",
      "@trpc/client": "^11.8.1",
      "@trpc/tanstack-react-query": "^11.8.1",
      "superjson": "^2.2.6"
    },
    "orpc": {
      "@orpc/server": "^1.13.1",
      "@orpc/client": "^1.13.1",
      "@orpc/react-query": "^1.13.1"
    }
  }
}
