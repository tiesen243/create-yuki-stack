{
  "name": "create-yuki-stack",
  "version": "0.0.40",
  "description": "A CLI tool for scaffolding type-safe, full-stack TypeScript applications with best practices and customizable.",
  "keywords": [
    "cli",
    "create-yuki-stack"
  ],
  "homepage": "https://create-yuki-stack.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/tiesen243/create-yuki-stack",
    "directory": "packages/cli"
  },
  "author": {
    "name": "Tiesen",
    "url": "https://tiesen.id.vn"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": "./dist/index.js",
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "format": "prettier --check . --ignore-path ../.gitignore --ignore-path ./.prettierignore",
    "lint": "eslint",
    "pub:dev": "tsdown && bun link create-yuki-stack",
    "pub:release": "tsdown && bun publish --tag latest",
    "typecheck": "tsc --noEmit"
  },
  "prettier": "../tooling/prettier/index.js",
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "gradient-string": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "22.15.30",
    "eslint": "latest",
    "prettier": "latest",
    "tsdown": "^0.12.7",
    "typescript": "latest"
  },
  "publishConfig": {
    "access": "public"
  }
}
