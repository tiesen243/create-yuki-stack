{
  "name": "@{{ name }}/api",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "bun run --hot --env-file=../../.env src/server.ts",
    "start": "node --env-file-if-exists=../../.env ./dist/server.mjs",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@{{ name }}/lib": "workspace:*",
    "@{{ name }}/validators": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@{{ name }}/tsconfig": "workspace:*",
    "tsdown": "catalog:",
    "typescript": "catalog:"
  }
}
