{
  "name": "@{{ name }}/nextjs",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "{{ pkm }} run with-env next build",
    "clean": "git clean -xdf .cache .next .turbo node_modules",
    "dev": "{{ pkm }} run with-env next dev --turbopack",
    "start": "{{ pkm }} run with-env next start",
    "typecheck": "bun with-env next typegen && tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@tanstack/react-query": "catalog:prod",
    "@{{ name }}/lib": "workspace:*",
    "@{{ name }}/ui": "workspace:*",
    "@{{ name }}/validators": "workspace:*",
    "next": "^16.1.3",
    "react": "catalog:react",
    "react-dom": "catalog:react"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "catalog:tailwind",
    "@types/node": "catalog:dev",
    "@types/react": "catalog:react",
    "@types/react-dom": "catalog:react",
    "@{{ name }}/tsconfig": "workspace:*",
    "dotenv-cli": "catalog:dev",
    "tailwindcss": "catalog:tailwind",
    "typescript": "catalog:dev"
  }
}
