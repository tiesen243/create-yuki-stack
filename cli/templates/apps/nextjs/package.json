{
  "name": "@{{ name }}/nextjs",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "{{ pkm }} run with-env next build",
    "clean": "git clean -xdf .cache .next .turbo node_modules",
    "dev": "{{ pkm }} run with-env next dev --turbopack --port 3000",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "start": "{{ pkm }} run with-env next start --port 3000",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "prettier": "@{{ name }}/prettier-config",
  "dependencies": {
    "@{{ name }}/env": "workspace:*",
    "@{{ name }}/ui": "workspace:*",
    "next": "15.3.3",
    "react": "catalog:react",
    "react-dom": "catalog:react"
  },
  "devDependencies": {
    "@{{ name }}/eslint-config": "workspace:*",
    "@{{ name }}/prettier-config": "workspace:*",
    "@{{ name }}/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "@types/react": "catalog:react",
    "@types/react-dom": "catalog:react",
    "dotenv-cli": "catalog:",
    "eslint": "catalog:tool",
    "prettier": "catalog:tool",
    "tailwindcss": "catalog:tailwind",
    "typescript": "catalog:tool"
  }
}
