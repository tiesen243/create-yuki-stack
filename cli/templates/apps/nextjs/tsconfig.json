{
  "extends": "@{{ name }}/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@{{ name }}/ui/*": ["../../packages/ui/src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "*.config.js",
    "*.config.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}

