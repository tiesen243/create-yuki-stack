{
  "name": "{{ name }}",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": {
    "packages": ["apps/*", "packages/*", "tooling/*"],
    "catalog": {
      "@types/node": "22.15.30",
      "zod": "^3.25.55"
    },
    "catalogs": {
      "react": {
        "react": "19.1.0",
        "react-dom": "19.1.0",
        "@types/react": "19.1.5",
        "@types/react-dom": "^19.1.5"
      },
      "tailwind": {
        "@tailwindcss/postcss": "^4.1.8",
        "@tailwindcss/vite": "^4.1.8",
        "tailwindcss": "^4.1.8"
      },
      "tool": {
        "eslint": "^9.28.0",
        "prettier": "^3.5.3",
        "typescript": "^5.8.3"
      }
    }
  },
  "scripts": {
    "build": "turbo run build",
    "bump-deps": "{{ pkme }} npm-check-updates --deep -u && {{ pkmi }}",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "db:push": "turbo -F @{{ name }}/db db:push",
    "db:studio": "turbo -F @{{ name }}/db db:studio",
    "dev": "turbo dev --continue",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "postinstall": "{{ pkm }} lint:ws",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:ws": "{{ pkme }} sherif@latest",
    "typecheck": "turbo run typecheck",
    "ui-add": "turbo run ui-add"
  },
  "prettier": "@{{ name }}/prettier-config",
  "devDependencies": {
    "@turbo/gen": "^2.5.4",
    "@{{ name }}/prettier-config": "workspace:*",
    "@{{ name }}/tsconfig": "workspace:*",
    "turbo": "^2.5.4"
  }
}
