{
  "name": "@{{ name }}/db",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "db:push": "{{ pkm }} with-env prisma db push",
    "db:studio": "{{ pkm }} with-env prisma studio",
    "dev": "tsc --watch",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "postinstall": "{{ pkm }} with-env prisma generate",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "prettier": "@{{ name }}/prettier-config",
  "dependencies": {
    "@prisma/client": "^6.9.0"
  },
  "devDependencies": {
    "@{{ name }}/eslint-config": "workspace:*",
    "@{{ name }}/prettier-config": "workspace:*",
    "@{{ name }}/tsconfig": "workspace:*",
    "dotenv-cli": "^8.0.0",
    "eslint": "catalog:tool",
    "prettier": "catalog:tool",
    "prisma": "^6.9.0",
    "typescript": "catalog:tool"
  }
}
